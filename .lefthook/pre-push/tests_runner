error=false

runTests () {
  cd $1;
  if [ -f "pubspec.yaml" ] && [ -d "test" ]; then
    echo "running tests in $1"
    
    flutter test || error=true
  fi

  cd - > /dev/null
}


dirs=(`find . -not -path '*/\.*' -maxdepth 1 -type d`)
for dir in "${dirs[@]}"; do
    runTests $dir
done

# Fail the build if there was an error
if [ "$error" = true ] ; then
    exit -1
fi

